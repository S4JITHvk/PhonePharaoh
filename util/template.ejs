<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

        .header img {
            max-width: 150px; /* Adjust the max-width as needed */
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .total-row td {
            font-weight: bold;
        }

        .total-row td:first-child {
            text-align: right;
        }
    </style>
</head>

<body>
    <div class="header">
        <img src="static/assets/Company logo.png" > 
        <h1>PhonePharaoh</h1>
        <h2>Sales Report <%= `${startDate} to ${endDate}` %></h2>
    </div>
    
    <table>
        <thead>
            <tr>
                <th>User ID</th>
                <th>Order ID</th>
                <th>Date</th>
                <th>Total Amount</th>
                <th>Payment Method</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
                <tr>
                    <td><%= order.UserId %></td>
                    <td><%= order._id %></td>
                    <td><%= new Date(order.OrderDate).toLocaleString() %></td>
                    <td>₹ <%= order.TotalPrice.toFixed(2) %></td>
                    <td><%= order.PaymentMethod %></td>
                </tr>
            <% }); %>
        </tbody>
        <tr class="total-row">
            <td colspan="3"></td>
            <td>Total Sales:</td>
            <% if (totalAmount) { %>
                <td>₹ <%= typeof totalAmount === 'number' ? totalAmount.toFixed(2) : 'N/A' %></td>
            <% } else { %>
                <td>No sales data</td>
            <% } %>
        </tr>
    </table>
</body>
</html>
